# Use the Visual Studio 2019 Build Tools image
FROM my-msvc-image

RUN net user /add jenkins jenkins && \
net localgroup Administrators jenkins /add

# Set the working directory in the Docker image
WORKDIR /usr/src/myapp

# Copy the current directory contents into the container at /usr/src/myapp
COPY . /usr/src/myapp

# Copy the build scripts into the Docker image
COPY build.bat .
COPY compile.bat .

# Configure the project build with CMake
RUN cmd /C build.bat

# Build the project
RUN cmd /C compile.bat

ENTRYPOINT C:\BuildTools\Common7\Tools\VsDevCmd.bat &&
CMD powershell.exe -NoLogo -ExecutionPolicy Bypass
